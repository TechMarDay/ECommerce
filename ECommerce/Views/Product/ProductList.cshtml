@model ECommerce.Models.Common.Pagination<ECommerce.Models.Product.ProductViewModel>
@*@{
    ViewData["Title"] = "Home Page";
}*@
<link href="~/assets/css/productList.css" rel="stylesheet" />
<div class="grid wide">
    <section class="row bread-crumb-detail">
        <div class="col l-12 m-12 c-12">
            <ul class="bread-crumb-detail-list">
                <li class="bread-crumb-detail-item">
                    <a href="/" class="bread-crumb-detail__link">Trang chủ</a>
                    <i class="fa fa-angle-right bread-crumb-detail__icon"></i>
                </li>
                <li class="bread-crumb-detail-item">
                    <a href="/sanpham.html" class="bread-crumb-detail__link">Tất cả sản phẩm</a>
                </li>
            </ul>
        </div>
    </section>



    <div class="row app__content">
        <div class="col l-12 m-12 c-12">
            <div class="evo-main-cate lazy" data-src="https://file.hstatic.net/200000265511/file/cat-banner-1_dfc102a72052433f8d86c965d0eb60d0.jpg" data-was-processed="true" style="background-image: url(&quot;https://file.hstatic.net/200000265511/file/cat-banner-1_dfc102a72052433f8d86c965d0eb60d0.jpg&quot;);">
                <div class="group-category-white">
                    <h1 class="col-title">Tất cả sản phẩm</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row app__content">
        <div class="col l-12 m-12 c-12">
            <div class="sort-product">
                <div class="sort-product-left">
                    <h3 class="sort-product-left-titel">Xếp theo:</h3>
                    <ul class="sort-product-left-list">
                        <li class="sort-product-left-item">
                            <input type="radio" id="AZName" name="filterProduct" value="AZName" class="sort-product-left-item__radio">
                            <label href="#" title="Tên A-Z" class="sort-product-left-item__link" for="AZName">Tên A-Z</label>
                        </li>
                        <li class="sort-product-left-item">
                            <input type="radio" id="ZAName" name="filterProduct" value="ZAName"  class="sort-product-left-item__radio">
                            <label href="#" title="Tên Z-A" class="sort-product-left-item__link" for="ZAName">Tên Z-A</label>
                        </li>
                        <li class="sort-product-left-item">
                            <input type="radio" id="priceAsc" name="filterProduct" value="priceAsc"  class="sort-product-left-item__radio">
                            <label href="#" title="Giá thấp đến cao" class="sort-product-left-item__link" for="priceAsc">Giá thấp đến cao</label>
                        </li>
                        <li class="sort-product-left-item">
                            <input type="radio" id="priceDec" name="filterProduct" value="priceDec"  class="sort-product-left-item__radio">
                            <label href="#" title="Giá cao xuống thấp" class="sort-product-left-item__link" for="priceDec">Giá cao xuống thấp</label>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row app__content">
        <div class="col l-12 m-12 c-12">
            <div class="product">
                <div class="row sm-gutter product-item-wrapper">
                    <!-- Product item -->
                    @if (Model.Items != null && Model.Items.Count > 0)
                    {
                        @foreach (var item in Model.Items)
                        {
                            <div class="col l-2-4 m-4 c-6 ">
                                <a href="~/@item.Url" class="product-item">
                                    <div class="product-item__img" style="background-image: url(@item.ThumbnailImage);">
                                    </div>
                                    <h4 class="product-item__name">
                                        @item.Name
                                    </h4>
                                    <div class="product-item__price">
                                        <span class="product-item__price-current">@item.Price.ToString("###,###,###") vnđ</span>
                                        @if (item.Discount != null && item.Discount > 0)
                                        {
                                            <span class="product-item__price-old">@item.DiscountPrice?.ToString("###,###,###")</span>
                                        }
                                    </div>
                                    @if (item.Discount != null && item.Discount > 0)
                                    {
                                        <div class="product-item__sale-off">

                                            <span class="product-item__sale-off-percent">@item.Discount %</span>
                                            <span class="product-item__sale-off-lable">GIẢM</span>
                                        </div>
                                    }
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col l-12 m-12 c-12">
            <ul class="pagination">
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="pagination-item page-item @(i == Model.CurrentPage ? "pagination-item--active" : "")">
                        <a href="/sanpham.html?currentPage=@i" class="pagination-item-link page-link">@i</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
